<h1><%= @project.title %></h1>

<div class='project-info'>

  <p><%= @project.summary %></p>

  <% if @project.images.length > 0 %>
    <% @project.images.each do |image|%>
      <p><%= image_tag image.image %></p>
      <p><%= image.caption %></p>
      <div>
        <p><%= link_to 'Edit', edit_project_image_path(image.project,image),
              class: 'waves-effect waves-light btn' %></p>
        <p><%= link_to 'Delete', project_image_path(image.project,image),
              class: 'waves-effect waves-light btn', method: :delete %></p>
      </div>
    <% end %>
  <% end %>

  <p>
    <%= link_to 'Add New Image', '#', :id => 'new-image-link' %>
  </p>

  <div id='new-image-form' class='hide'>
    <%= form_for [@image.project, @image] do |f| %>

      <div class='input-field col s6'>
        <label for='Image'>Image URL</label>
        <%= f.text_field :image, id: 'image', class: 'active materialize-textarea' %><br/>
      </div>

      <div class='input-field col s6'>
        <label for='Caption'>Caption</label>
        <%= f.text_field :caption, id: 'caption', class: 'active materialize-textarea' %><br/>
      </div>

      <div>
        <p><%= link_to 'Cancel', :back, class: 'waves-effect waves-light btn' %></p>
        <p><%= f.submit 'Save Image', class: 'waves-effect waves-light btn' %></p>
      </div>

    <% end %>
  </div>

  <p>
    <%= link_to 'Edit', edit_project_path(@project) %>
    <%= link_to 'Delete', project_path(@project), method: :delete %>
  </p>
</div>    
