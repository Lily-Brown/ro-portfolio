<div class='form-container'>
  <h2>Edit Image Information</h2>
  <br />

  <%= form_for [@image.project, @image], html: { multipart: true } do |f| %>

  <div class='form-group'>
    <%= image_tag @image.image, class: 'project-div' %>
  </div>

  <div class='form-group'>
    <%= f.check_box :is_primary %>
    <label for='Primary'>Make Primary</label>
  </div>

  <div class='form-group'>
    <label for='Image'>Image URL</label>
    <%= f.file_field :image, class: 'form-control' %><br/>
  </div>

  <div class='form-group'>
    <label for='Caption'>Caption</label>
    <%= f.text_field :caption, class: 'form-control' %><br/>
  </div>


  <div class='card-action'>
    <%= link_to 'Cancel', project_path(@image.project), class: 'btn btn-secondary' %>
    <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
  </div>

  <% end %>

</div>
