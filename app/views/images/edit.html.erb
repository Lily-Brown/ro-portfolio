<div class="card">
  <%= form_for [@image.project, @image] do |f| %>

  <div class="container">
    <div class="card-content">
      <div class='input-field col s6'>
        <label for='Image'>Image URL</label>
        <%= f.text_field :image, class: 'active' %><br/>
      </div>
      <div class='input-field col s6'>
        <label for='Caption'>Caption</label>
        <%= f.text_field :caption, class: 'active' %><br/>
      </div>
    </div>

    <div class='card-action'>
      <%= link_to 'Cancel', :back, class: 'waves-effect waves-light btn right' %>
      <%= f.submit 'Save Changes', class: 'waves-effect waves-light btn' %>
    </div>
  
  </div>
  <% end %>
</div>
